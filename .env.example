# ===================================
# Toobix-Unified Environment Config
# ===================================
# Copy this file to .env and fill in your values

# ===================================
# AI / LLM Configuration
# ===================================

# Groq API Key (REQUIRED for AI text generation)
# Get yours at: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# ===================================
# Database
# ===================================

# SQLite Database Path (default: ./data/toobix-unified.db)
DATABASE_PATH=./data/toobix-unified.db

# ===================================
# Server Ports
# ===================================

# Bridge MCP Server (default: 3337)
BRIDGE_PORT=3337

# Main API Server (default: 3001)
API_PORT=3001

# Diary/Chat API Server (default: 3002)
DIARY_PORT=3002

# Web Frontend (default: 3000)
WEB_PORT=3000

# ===================================
# ngrok (for public MCP access)
# ===================================

# Your ngrok authtoken (optional - for persistent URLs)
# Get at: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=

# ngrok domain (optional - for custom domains)
NGROK_DOMAIN=

# ===================================
# Development
# ===================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Enable verbose logging
DEBUG=false

# ===================================
# Production (Vercel/Railway)
# ===================================

# Public API URL (production only)
PUBLIC_API_URL=

# Database URL (if using hosted DB)
DATABASE_URL=

# ===================================
# Optional: External Services
# ===================================

# OpenAI API Key (if using OpenAI instead of Groq)
OPENAI_API_KEY=

# Anthropic API Key (if using Claude)
ANTHROPIC_API_KEY=

# ===================================
# Notes
# ===================================
# 1. Never commit .env to git (already in .gitignore)
# 2. GROQ_API_KEY is REQUIRED - get free tier at console.groq.com
# 3. Other values have sensible defaults
# 4. For production, use environment variables instead of .env file
